<div class="all-collections">
    <h2>All collections</h2>
    <hr>
    
    <!--FIXME: make cards separate into 3 columns -->
    <div class="container">
        

        <div class="row">
            <% @collections.each do |c| %>
              
                <div class="card">
                    <%= image_tag( c.picture, class: "card-img-top") %>
                    <div class="card-body">
                        <%= link_to c.name, controller: "collections", action: "show", name: c.name.parameterize %>
                    </div>
              
            
            
                </div>

            <% end %>
        
        
        </div>
    
    
    </div>

</div>